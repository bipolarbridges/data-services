{
  "name": "bb-api",
  "description": "Internal API for Bipolar Bridges Project",
  "main": "main.ts",
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "build:mock:auth": "cd tests/mocks/auth_server && yarn build",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest tests --testPathPattern=/dist/tests/*",
    "start": "node ./dist/main.js",
    "start:lazy": "ts-node main.ts",
    "start:dev:lazy": "nodemon",
    "mock:api": "prism mock ./reference/bb-api.v0.yaml",
    "mock:auth": "cd tests/mocks/auth_server && yarn start",
    "start:dev": "concurrently --kill-others 'yarn start:lazy' 'yarn mock:auth'",
    "all": "yarn install && cd tests/mocks/auth_server && yarn install"
  },
  "author": "bipolarbridges",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "express": "^5.0.0-alpha.8",
    "neo4j-driver": "^4.3.1",
    "neo4j-driver-core": "^4.3.1",
    "neogma": "^1.8.4",
    "typescript": "^4.3.2"
  },
  "devDependencies": {
    "@stoplight/prism-cli": "^4.1.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.5",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "concurrently": "^6.0.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "jest": "^27.0.1",
    "jest-openapi": "^0.11.0",
    "nodemon": "^2.0.7",
    "ts-jest": "^27.0.1",
    "ts-node": "^10.0.0"
  }
}
